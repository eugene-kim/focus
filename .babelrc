{
  // For more details:
  // https://github.com/facebook/react-native/blob/master/babel-preset/configs/main.js#L21
  "presets": ["react-native"],

  "plugins": [
    [
      "babel-plugin-module-resolver", {
        "root": ["./src"],
        "extensions": [
          ".js",
          ".ios.js",
          ".android.js"
        ]
      }
    ],
    "transform-decorators-legacy",
    "transform-class-properties"
  ],

  "retainLines": true
}
